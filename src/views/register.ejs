<!DOCTYPE html>
<html lang="en">
  <%- include('partials/top_head') %>
  <title>Creá tu cuenta</title>
  <%- include('partials/bottom_head') %>

  <body>
    <%- include('partials/header') %>

    <main id="registerBox">
      <form action="/" method="POST" id="formularioDeRegistro">
        <!--Campos completables-->
        <section id="nombreCompleto">
          <input
            type="text"
            name="nombre"
            id="nombre"
            placeholder="Nombre"
            class="campos"
          />
          <input
            type="text"
            name="apellido"
            id="apellido"
            placeholder="Apellido"
            class="campos"
          />
        </section>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Correo electrónico"
          class="campos"
        />
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Creá tu contraseña"
          class="campos"
        />
        <input
          type="password"
          name="password"
          id="confirmPassword"
          placeholder="Confirmá tu contraseña"
          class="campos"
        />
        <section id="terminosYCondiciones">
          <input
            type="checkbox"
            name="terms"
            id="terms"
            value="terminos"
            class="terms"
            required
          />
          <label for="terms" id="terminos"
            >Acepto términos de servicio y privacidad</label
          >
        </section>

        <!--Creá tu cuenta o iniciá sesión-->
        <section id="botonesRegistro">
          <button class="button">Crear cuenta</button>
          <p id="cuentaExistente">¿Ya tenés una cuenta?</p>
          <a href="/register" id="buttonRegister"><div>Iniciá sesión</div></a>
        </section>
      </form>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
