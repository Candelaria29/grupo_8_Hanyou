<!DOCTYPE html>
<html lang="en">
  <%- include('partials/top_head') %>
  <title>Creación de productos</title>
  <%- include('partials/bottom_head') %>
  <body>
    <%- include('partials/header') %>
    <main id="createNewProductMain">
      <form action="/" method="post" id="createNewProductForm">
        <h1 class="createNewProductTitles">Creación de productos</h1>
        <input
          type="file"
          name="imageOfCreatedProduct"
          id="createNewProductDesign"
          style="display: none"
          accept=".jpg, .png"
          multiple
          required
        />
        <label for="createNewProductDesign" class="c_eButton" id="filesButton"
          >Cargar imagen del diseño</label
        >
        <!-- <input type="file" name="uploadfile" id="img" style="display: none" />
        <label for="img">Click me to upload image</label> -->
        <!-- Nombre del producto -->
        <input
          type="text"
          name="nombre"
          id="createNewProductName"
          placeholder="Nombre del producto"
          class="createNewProductCampos"
          required
        />
        <!-- Descripción  -->
        <textarea
          type="text"
          name="descripcion"
          id="c_eDescripcion"
          placeholder="Descripción del producto"
          class="createNewProductCampos"
          required
        ></textarea>
        <!-- Imagen -->
        <!-- Categoría -->
        <input
          type="text"
          name="categoria"
          id="c_dCategoria"
          placeholder="Categoría"
          class="createNewProductCampos"
          required
        />
        <!-- Características -->
        <section id="caracteristicasProductoCreado">
          <h2 class="createNewProductTitles">Características del producto</h2>
          <!-- Colores -->
          <div id="characteristicArticles">
            <article class="createNewProductcharacteristic">
              <label class="createNewProductSubtitles"
                >Seleccione un color</label
              >
              <select name="color" class="c_eButton" required>
                <option value="#ff0000">Rojo</option>
                <option value="#00ff00">Verde</option>
                <option value="0000ff">Azul</option>
                <option value="#770077">Morado</option>
              </select>
            </article>
            <!-- Tamaños -->
            <article class="createNewProductcharacteristic">
              <label class="createNewProductSubtitles"
                >Seleccione una medida</label
              >
              <select name="medida" class="c_eButton" required>
                <option value="2x6">Pequeño</option>
                <option value="4x12">Regular</option>
                <option value="6x18">Mediano</option>
                <option value="8x24">Grande</option>
              </select>
            </article>
          </div>
        </section>
        <!-- Precio -->
        <section id="precioProductoCreado">
          <p>$</p>
          <input
            type="number"
            name="precio"
            id="createNewProductPrice"
            placeholder="Precio"
            class="createNewProductCampos"
            required
          />
        </section>
        <section id="botonProductoCreado">
          <button type="button" class="c_eButton">Crear producto</button>
          <button type="reset" class="c_eButton">Reiniciar formulario</button>
        </section>
      </form>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
