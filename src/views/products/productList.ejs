<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/top_head') %>
    <title>Listado de productos</title>
    <%- include('../partials/bottom_head') %>
  </head>
  <body>
    <%- include('../partials/header') %>
    <main>
      <!--Banner Principal-->
      <h1 id="listTitle">Listado de productos</h1>

      <!--Productos principales-->
      <section id="mainProducts">
        <ul id="productosIndex">
          <% if (products.length > 0) {products.forEach (e => {%> <%-
          include('../partials/productCards', {e:e}) %> <% })} %>
        </ul>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
